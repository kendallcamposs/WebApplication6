@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="card mb-3 col-11 md:col-6 m-auto">
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <div class="mb-5">
                <div class="text-center mb-3">
                    <img src="https://www.primefaces.org/primeblocks-jsf/javax.faces.resource/images/blocks/logos/hyper.svg.xhtml?ln=primeblocks-app" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="text-center text-900 text-3xl font-medium mb-3">Bienvenido!</div>
                <span class="text-600 font-medium mr-2">No tienes cuenta?</span>
                <a class="font-medium no-underline text-blue-500 cursor-pointer" asp-page="/Account/Register">Creala aqui!</a>
            </div>
            <div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email"
                           class="form-control"
                           id="inputEmail"
                           autocomplete="off"
                           placeholder="correo@ejemplo.com"
                           aria-required="true"
                           autofocus>
                    <label asp-for="Input.Email" class="form-label">Correo Electronico</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password"
                           class="form-control"
                           id="inputPassword"
                           autocomplete="off"
                           placeholder="**********"
                           aria-required="true">
                    <label asp-for="Input.Password" class="form-label">Contrasena</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="flex align-items-center justify-content-between mb-6 mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Recordarme
                        </label>
                    </div>
                    <a class="font-medium no-underline ml-2 text-blue-500 text-right cursor-pointer">Olvido su contrasena?</a>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
